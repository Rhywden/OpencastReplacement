@using FFmpeg.NET
@using FFmpeg.NET.Events
@using Microsoft.Extensions.Logging
@inject ILogger<Upload> Logger
@inject IWebHostEnvironment Environment

<InputFile OnChange="@LoadFiles" multiple />

@if (isLoading)
{
    <p>Progress: @string.Format("{0:P0}", progressPercent)</p>
}
else
{
    <ul>
        @foreach (var file in loadedFiles)
        {
            <li>
                <ul>
                    <li>Name: @file.Name</li>
                    <li>Last modified: @file.LastModified.ToString()</li>
                    <li>Size (bytes): @file.Size</li>
                    <li>Content type: @file.ContentType</li>
                </ul>
            </li>
        }
    </ul>
}

<p>@conversionProgress</p>

@code {
    private List<IBrowserFile> loadedFiles = new();
    private long maxFileSize = 1024 * 1024 * 500;
    private int maxAllowedFiles = 3;
    private bool isLoading;
    private decimal progressPercent;
    private string conversionProgress = "";

    private async Task LoadFiles(InputFileChangeEventArgs e)
    {
        isLoading = true;
        loadedFiles.Clear();
        progressPercent = 0;

        foreach (var file in e.GetMultipleFiles(maxAllowedFiles))
        {
            try
            {
                //var trustedFileName = Path.GetRandomFileName();
                var path = Path.Combine(Environment.ContentRootPath,
                    "wwwroot","uploads", file.Name);

                await using FileStream writeStream = new(path, FileMode.Create);
                using var readStream = file.OpenReadStream(maxFileSize);
                var bytesRead = 0;
                var totalRead = 0;
                var buffer = new byte[1024 * 10];

                while ((bytesRead = await readStream.ReadAsync(buffer)) != 0)
                {
                    totalRead += bytesRead;

                    await writeStream.WriteAsync(buffer, 0, bytesRead);

                    progressPercent = Decimal.Divide(totalRead, file.Size);

                    StateHasChanged();
                }

                loadedFiles.Add(file);
                await StartEncoding(file.Name);
            }
            catch (Exception ex)
            {
                Logger.LogError("File: {Filename} Error: {Error}", 
                    file.Name, ex.Message);
            }
        }

        isLoading = false;
    }

    private async Task StartEncoding(string filename)
    {
        var path = Path.Combine(Environment.ContentRootPath,
                    "wwwroot","uploads", filename);
        var outputpath = Path.Combine(Environment.ContentRootPath,
                    "wwwroot","uploads", "encoded_file.mp4");
        var inputfile = new FFmpeg.NET.InputFile(path);
        var outputfile = new FFmpeg.NET.OutputFile(outputpath);
        var ffmpeg = new Engine("C:\\ffmpeg\\ffmpeg.exe");
        ffmpeg.Progress += OnProgress;
        var cancelToken = new CancellationToken();
        await ffmpeg.ConvertAsync(inputfile, outputfile, cancelToken);
    }
    private void OnProgress(object? sender, ConversionProgressEventArgs e)
    {
        conversionProgress = $"Bitrate: {e.Bitrate}, FPS: {e.Fps}, Frame: {e.Frame} ProcessedDuration: {e.ProcessedDuration} Size: {e.SizeKb} TotalDuration: {e.TotalDuration}";
        InvokeAsync(StateHasChanged);
    }
}
