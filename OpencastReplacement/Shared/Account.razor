@using System.Security.Claims
@inject AuthenticationStateProvider AuthenticationStateProvider

<AuthorizeView Roles="admin,lehrer">
    <Authorized>
        Hallo @user?.Identity?.Name
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Link="logout">Logout</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Link="login">Login</MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    private ClaimsPrincipal? user;

    protected override async Task OnInitializedAsync()
    {
        user = (await AuthenticationStateProvider.GetAuthenticationStateAsync()).User;
    }
}
